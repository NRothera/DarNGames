@page
@model DarNGames.Pages.ProfilePages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Profile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Profile.Id" />
            <div class="form-group">
                <label asp-for="Profile.FirstName" class="control-label"></label>
                <input asp-for="Profile.FirstName" class="form-control" />
                <span asp-validation-for="Profile.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.Surname" class="control-label"></label>
                <input asp-for="Profile.Surname" class="form-control" />
                <span asp-validation-for="Profile.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.Email" class="control-label"></label>
                <input asp-for="Profile.Email" class="form-control" />
                <span asp-validation-for="Profile.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.Country" class="control-label"></label>
                <input asp-for="Profile.Country" class="form-control" />
                <span asp-validation-for="Profile.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.Password" class="control-label"></label>
                <input asp-for="Profile.Password" class="form-control" />
                <span asp-validation-for="Profile.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
