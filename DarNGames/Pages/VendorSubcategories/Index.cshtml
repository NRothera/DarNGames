@page "{id}"
@model DarNGames.Pages.VendorSubcategories.IndexModel

@{
    ViewData["Title"] = "Index";
    var vendorId = RouteData.Values["id"];
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VendorSubcategories[0].ImageLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VendorSubcategories[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VendorSubcategories[0].GameVendorId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.VendorSubcategories) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameVendorId)
            </td>
